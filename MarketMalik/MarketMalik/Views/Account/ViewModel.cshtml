@model FormsAuthApp.Models.ViewModel

@{
    ViewBag.Title = "Личный кабинет";
}

<h2>Личный кабинет</h2>


@using (Html.BeginForm())
{

<div class="form-horizontal">
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.login, new { @class = "control-label col-md-2" })
        @Model.login
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.is_admin, new { @class = "control-label col-md-2" })
        @Model.is_admin
    </div>

    <div class="form-group">
        @if (Model.is_admin)
        {
            <button class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Create">Create Products</button>
        }
    </div>

    <div class="form-group">
        Корзина товары
        <ul>
            @foreach (string product in Model.products)
            {
                <li> @product </li>
            }
        </ul>

    </div>
    <div class="form-group">
        Заказанные товары
        <ul>
            @foreach (string product in Model.products_ordered)
            {
                <li> @product </li>
            }
        </ul>

    </div>

    <div class="form-group">
        <button class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="OderLast">Oder</button>
    </div>

</div>
}